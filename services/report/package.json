    "@workspace/env": "workspace:*",
    "@biomejs/biome": "2.2.2",
    "@types/node": "^22.13.0",
    "@types/pg": "^8.15.5",
    "@workspace/typescript-config": "workspace:*",
    "drizzle-kit": "^0.31.4",
    "tsx": "^4.20.5",
