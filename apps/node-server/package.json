{
  "name": "node-server",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc && tsup",
    "dev": "node --import=tsx --watch src/index.ts",
    "start": "node dist/index.cjs",
    "lint": "biome lint . --write",
    "check-types": "tsc --noEmit",
    "test": "vitest run"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "@workspace/util": "workspace:*",
    "@workspace/env": "workspace:*"
  },
  "devDependencies": {
    "@workspace/typescript-config": "workspace:*",
    "@biomejs/biome": "2.2.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.1"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "outDir": "dist",
    "format": [
      "cjs"
    ],
    "target": "es2020",
    "sourcemap": true,
    "clean": true,
    "dts": true,
    "splitting": false,
    "noExternal": [
      "@workspace/util",
      "@workspace/env"
    ]
  }
}
