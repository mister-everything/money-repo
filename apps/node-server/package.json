{
  "name": "node-server",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc && tsup",
    "dev": "node --import=tsx --watch src/index.ts",
    "start": "node dist/index.cjs",
    "lint": "biome lint . --write",
    "check-types": "tsc --noEmit",
    "test": "vitest run __test__/index.test.ts",
    "test:e2e": "start-server-and-test start 5050 test:e2e:run",
    "test:e2e:run": "vitest run __test__/e2e --config vitest.e2e.config.ts"
  },
  "dependencies": {
    "@service/todo-service": "workspace:*",
    "@workspace/env": "workspace:*",
    "@workspace/util": "workspace:*",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.44.5",
    "express": "^5.1.0",
    "pg": "^8.16.3",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/supertest": "^6.0.3",
    "@workspace/typescript-config": "workspace:*",
    "start-server-and-test": "^2.1.0",
    "supertest": "^7.1.4",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.1"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "outDir": "dist",
    "format": [
      "cjs"
    ],
    "target": "es2020",
    "sourcemap": true,
    "clean": true,
    "dts": true,
    "splitting": false,
    "noExternal": [
      "@workspace/util",
      "@workspace/env",
      "@service/todo-service"
    ]
  }
}
