{
  "name": "root",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "solves:dev": "turbo -F solves dev",
    "start": "turbo run start",
    "agent": "pnpm -F agent agent",
    "lint": "turbo run lint",
    "postinstall": "tsx scripts/postinstall.ts",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "test:e2e": "turbo run test:e2e",
    "playwright:install": "playwright install chromium --with-deps",
    "db:migrate": "turbo run db:migrate",
    "format": "biome check . --apply",
    "check-types": "turbo run check-types",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "pnpm build && changeset publish",
    "clean": "tsx scripts/clean.ts",
    "docker:pg": "docker run --name local-pg -e POSTGRES_PASSWORD=your_password -e POSTGRES_USER=your_username -e POSTGRES_DB=your_database_name -p 5432:5432 -d postgres",
    "docker:redis": "docker run --name local-redis -p 6379:6379 -d redis:7-alpine"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@changesets/cli": "^2.29.6",
    "@playwright/test": "^1.55.0",
    "danger": "^13.0.4",
    "glob": "^11.0.3",
    "inquirer": "^12.9.4",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.5",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  },
  "trustedDependencies": [
    "@biomejs/biome"
  ]
}
