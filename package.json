{
  "name": "root",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "solves:dev": "turbo -F solves dev",
    "start": "turbo run start",
    "agent": "pnpm -F agent agent",
    "lint": "turbo run lint",
    "init:env": "tsx scripts/init-env.ts",
    "postinstall": "tsx scripts/postinstall.ts",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "test:e2e": "turbo run test:e2e",
    "playwright:install": "turbo run playwright:install",
    "format": "biome check . --apply",
    "check-types": "turbo run check-types",
    "changeset": "changeset",
    "check": "turbo run check",
    "changeset:version": "changeset version",
    "changeset:publish": "pnpm build && changeset publish",
    "clean": "tsx scripts/clean.ts",
    "docker:pg": "docker run --name local-pg -e POSTGRES_PASSWORD=your_password -e POSTGRES_USER=your_username -e POSTGRES_DB=your_database_name -p 5432:5432 -d postgres",
    "docker:pg:hard": "(docker stop local-pg && docker rm local-pg) || true && pnpm docker:pg && pnpm db:migrate",
    "docker:redis": "docker run --name local-redis -p 6379:6379 -d redis:7-alpine",
    "docker:redis:hard": "(docker stop local-redis && docker rm local-redis) || true && pnpm docker:redis",
    "db:studio": "drizzle-kit studio",
    "db:seed": "turbo run db:seed",
    "db:migrate": "turbo run db:migrate"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@changesets/cli": "^2.29.7",
    "@playwright/test": "^1.56.1",
    "@workspace/env": "workspace:*",
    "danger": "^13.0.5",
    "drizzle-kit": "^0.31.7",
    "glob": "^11.1.0",
    "inquirer": "^12.11.1",
    "rimraf": "^6.1.0",
    "tsx": "^4.20.6",
    "turbo": "^2.6.1",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  },
  "trustedDependencies": [
    "@biomejs/biome"
  ]
}
